# Server Configuration
PORT=3000
NODE_ENV=development

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
FALLBACK_AGENT_NUMBER=+1234567890

# AI Service Selection (openai or gemini)
AI_SERVICE=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro

# Google Cloud Configuration (for Speech-to-Text and Text-to-Speech)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json
GOOGLE_PROJECT_ID=your_google_project_id

# Speech Configuration
STT_LANGUAGE_CODE=en-US
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-F

# External Tools Configuration
DATABASE_API_URL=https://your-database-api.com
CALENDAR_API_URL=https://www.googleapis.com/calendar/v3
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key

# Performance Settings
MAX_CONCURRENT_CALLS=50
CONVERSATION_HISTORY_TURNS=5
RESPONSE_TIMEOUT_MS=5000
